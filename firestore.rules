rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================
    // HELPER FUNCTIONS
    // =====================================================

    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if user owns the project (UID-based)
    function isProjectOwner(projectId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/projects/$(projectId)) &&
             get(/databases/$(database)/documents/projects/$(projectId)).data.owner == request.auth.uid;
    }

    // =====================================================
    // USER PROFILES COLLECTION
    // =====================================================

    match /userProfiles/{userId} {
      // Users can only read/write their own profile
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // =====================================================
    // PROJECTS COLLECTION
    // =====================================================

    match /projects/{projectId} {
      // Users can only read/write their own projects (UID-based ownership)
      allow read, write: if isSignedIn() &&
                           resource.data.owner == request.auth.uid;

      // Allow creation if user is authenticated and sets their UID as owner
      allow create: if isSignedIn() &&
                      request.resource.data.owner == request.auth.uid;
    }

    // =====================================================
    // MK_PROJECTS COLLECTION
    // =====================================================

    match /mk_projects/{mkProjectId} {
      // Read: User must own the parent project
      allow read: if isSignedIn() &&
                    isProjectOwner(resource.data.projectId);

      // Create: User must own the parent project
      allow create: if isSignedIn() &&
                      isProjectOwner(request.resource.data.projectId);

      // Update/Delete: User must own the parent project
      allow update, delete: if isSignedIn() &&
                              isProjectOwner(resource.data.projectId);

      // =====================================================
      // HIERARCHIES SUBCOLLECTION
      // =====================================================

      match /hierarchies/{hierarchyId} {
        // Users can read if they own the parent project
        allow read: if isSignedIn() &&
                      isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);

        // Users can create/update/delete hierarchies
        allow write: if isSignedIn() &&
                       isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);
      }

      // =====================================================
      // ASSIGNMENTS SUBCOLLECTION
      // =====================================================

      match /assignments/{assignmentId} {
        allow read: if isSignedIn() &&
                      isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);

        allow write: if isSignedIn() &&
                       isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);
      }

      // =====================================================
      // ZONES SUBCOLLECTION
      // =====================================================

      match /zones/{zoneId} {
        allow read: if isSignedIn() &&
                      isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);

        allow write: if isSignedIn() &&
                       isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);
      }

      // =====================================================
      // DOOR_ZONES SUBCOLLECTION
      // =====================================================

      match /door_zones/{doorZoneId} {
        allow read: if isSignedIn() &&
                      isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);

        allow write: if isSignedIn() &&
                       isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);
      }

      // =====================================================
      // EXPORTS SUBCOLLECTION
      // =====================================================

      match /exports/{exportId} {
        allow read: if isSignedIn() &&
                      isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);

        // Exports are created by users
        allow create: if isSignedIn() &&
                        isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);

        // Exports cannot be updated or deleted
        allow update, delete: if false;
      }

      // =====================================================
      // AUDIT_LOG SUBCOLLECTION
      // =====================================================

      match /audit_log/{auditId} {
        // Users can read audit logs
        allow read: if isSignedIn() &&
                      isProjectOwner(get(/databases/$(database)/documents/mk_projects/$(mkProjectId)).data.projectId);

        // Only Cloud Functions can create audit logs
        allow write: if false;
      }
    }

    // =====================================================
    // DEFAULT DENY
    // =====================================================

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
